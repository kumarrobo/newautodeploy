			.newsletter span img{display: block;margin: 0 auto 20px;width: 150px;float:none;}
			.divider{background-color:#ccc;width:90%;height:1px;display:block;margin:0 auto;padding:1px 0 !important;}
			.newsletter span{text-align:justify;}
			.newsletter span img{padding-right:0px !important;}
